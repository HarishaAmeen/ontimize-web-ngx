{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "noImplicitReturns": true,
    "listFiles": true,
    "noUnusedLocals": true,
    "pretty": true,
    "stripInternal": true,
    // "sourceMap": false,
    // "inlineSourceMap": false,
    // "inlineSources": false,
    "outDir": "dist",
    "noUnusedParameters": true,
    "types": [
      "hammerjs",
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2016"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "index.ts",
    "ontimize/**/*.ts"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit": false,
    "strictMetadataEmit": true
  }
}